#
# Any comments you wish to add
#

PKG="docbook-xsl"
PKG_VERSION="1.79.1"
PKG_FILE="docbook-xsl-${PKG_VERSION}.tar.bz2"
URL="http://downloads.sourceforge.net/docbook/docbook-xsl-${PKG_VERSION}.tar.bz2"
MD5="b48cbf929a2ad85e6672f710777ca7bc"
for i in PATCH{1..10}; do
   unset $i
done
PATCH1="http://downloads.sourceforge.net/docbook/docbook-xsl-doc-${PKG_VERSION}.tar.bz2 7eb51958e1bf97f3c5b013c42eb61e31"

( cat << "xEOFx"
   tar -xf ../docbook-xsl-doc-${PKG_VERSION}.tar.bz2 --strip-components=1
   install -v -m755 -d /usr/share/xml/docbook/xsl-stylesheets-${PKG_VERSION} &&
   
   cp -v -R VERSION assembly common eclipse epub epub3 extensions fo        \
            highlighting html htmlhelp images javahelp lib manpages params  \
            profiling roundtrip slides template tests tools webhelp website \
            xhtml xhtml-1_1 xhtml5                                          \
       /usr/share/xml/docbook/xsl-stylesheets-${PKG_VERSION} &&
   
   ln -s VERSION /usr/share/xml/docbook/xsl-stylesheets-${PKG_VERSION}/VERSION.xsl &&
   
   install -v -m644 -D README \
                       /usr/share/doc/docbook-xsl-${PKG_VERSION}/README.txt &&
   install -v -m644    RELEASE-NOTES* NEWS* \
                       /usr/share/doc/docbook-xsl-${PKG_VERSION}
   cp -v -R doc/* /usr/share/doc/docbook-xsl-${PKG_VERSION}
   
   if [ ! -d /etc/xml ]; then install -v -m755 -d /etc/xml; fi &&
   if [ ! -f /etc/xml/catalog ]; then
       xmlcatalog --noout --create /etc/xml/catalog
   fi &&
   
   xmlcatalog --noout --add "rewriteSystem" \
              "http://docbook.sourceforge.net/release/xsl/${PKG_VERSION}" \
              "/usr/share/xml/docbook/xsl-stylesheets-${PKG_VERSION}" \
       /etc/xml/catalog &&
   
   xmlcatalog --noout --add "rewriteURI" \
              "http://docbook.sourceforge.net/release/xsl/${PKG_VERSION}" \
              "/usr/share/xml/docbook/xsl-stylesheets-${PKG_VERSION}" \
       /etc/xml/catalog &&
   
   xmlcatalog --noout --add "rewriteSystem" \
              "http://docbook.sourceforge.net/release/xsl/current" \
              "/usr/share/xml/docbook/xsl-stylesheets-${PKG_VERSION}" \
       /etc/xml/catalog &&
   
   xmlcatalog --noout --add "rewriteURI" \
              "http://docbook.sourceforge.net/release/xsl/current" \
              "/usr/share/xml/docbook/xsl-stylesheets-${PKG_VERSION}" \
       /etc/xml/catalog
   
   
xEOFx
) > tmp
